{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",

    "data": {
        "values": [
            { "x": 0, "y": 0 },
            { "x": 1, "y": 0 },
            { "x": 2, "y": 0 },
            { "x": 0, "y": 1 },
            { "x": 1, "y": 1 },
            { "x": 2, "y": 1 },
            { "x": 3, "y": 0 }



            
        ]
    },
    "transform": [
        {
          "calculate": "datum.y === 0 ? 'x' : 'y'",
          "as": "category"
        }
    ],
    "mark": {
        "type": "rect",
        "width": 5, 
        "height": 5, 
        "color": "steelblue"
    },
    "encoding": {
        "x": {
            "field": "x",
            "type": "ordinal"
        },
        "y": {
            "field": "y",
            "type": "ordinal"
        },
        "color": {
            "field": "category",
            "type": "nominal",
            "legend":null,
            "scale": {
              "domain": ["x", "y"],
              "range": ["red", "black"]
            }
          }
    },
    "width": 140,
    "height": 50
}